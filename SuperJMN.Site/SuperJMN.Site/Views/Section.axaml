<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:views="clr-namespace:SuperJMN.Site.Views">

    <Design.PreviewWith>
        <Border Width="400" Height="400">
            <views:Section Title="Section" TitleAlignment="Center">
                <Button>hi</Button>
            </views:Section>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type views:Section}" TargetType="views:Section">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="views:Section">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Stretch" TextAlignment="{TemplateBinding TitleAlignment}" Margin="0 0 0 20" Classes="Section" Text="{TemplateBinding Title}" />
                        <ContentPresenter Content="{TemplateBinding Content}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </ControlTheme>
</ResourceDictionary>